---
const { title, level } = Astro.props;
const TagName = level || "h1";
const textSize = () => {
    const sizes = {
        h1: "text-5xl",
        h2: "text-4xl",
        h3: "text-3xl",
        h4: "text-2xl",
        h5: "text-xl",
    };
    return sizes[TagName];
};
---

<TagName
    class={`${textSize()} font-extrabold text-transparent bg-clip-text bg-gradient-to-b from-purple-400 to-blue-600 my-2 leading-1 break-words`}
>
    {title}
</TagName>
