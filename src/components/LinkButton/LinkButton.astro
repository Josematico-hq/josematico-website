---
const { link } = Astro.props;
---

<a
    href={link}
    rel="noreferrer"
    class="link-button flex flex-row items-center justify-center w-fit mt-6 text-slate-100 px-8 py-3 rounded-lg text-lg font-medium bg-slate-800 shadow-lg border-2 border-slate-700"
>
    <slot /></a
>

<style>
    .link-button {
        @apply bg-none bg-100% bg-400% transition-background-position ease-linear duration-200;
    }
    .link-button:is(:hover, :focus-within) {
        @apply bg-0% bg-gradient-to-l from-slate-800 via-purple-700 to-slate-800 border-2 border-slate-200 translate-y-1;
    }
</style>
