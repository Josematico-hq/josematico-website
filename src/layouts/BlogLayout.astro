---
import { t } from "i18next";
import MainLayout from "./MainLayout.astro";
import PostCard from "../components/PostCard/PostCard.astro";
import BasicHeading from "../components/Basics/BasicHeading/BasicHeading.astro";

const { entries = [] } = Astro.props;
---

<MainLayout title="Blog">
    <BasicHeading title="The Blog" description={t("blog.description")} />
    {
        entries.map(({ data: { title, preview, pubDate }, slug }) => (
            <PostCard
                pubDate={pubDate}
                title={title}
                slug={slug}
                preview={preview}
            />
        ))
    }
</MainLayout>
