---
import { localizePath } from "astro-i18next";
import MainLayout from "./MainLayout.astro";

const { entries = [] } = Astro.props;
---

<MainLayout title="Blog">
    <h1
        class="text-center text-7xl md:text-9xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-pink-500 via-red-500 to-yellow-500 p-4 mb-10"
    >
        The Blog
    </h1>
    {
        entries.map(({ data: { title, preview }, slug }) => (
            <>
                <a href={localizePath(`/blog/${slug}`)} class="">
                    <div class="p-10 bg-slate-800 rounded-xl border border-gray-700 shadow-md hover:shadow-2xl mb-4">
                        <h2 class="text-2xl md:text-3xl font-bold">{title}</h2>
                        <p class="text-lg md:text-xl text-slate-400">
                            {preview}
                        </p>
                    </div>
                </a>
            </>
        ))
    }
</MainLayout>
