---
import i18next, { t } from "i18next";
import MainLayout from "./MainLayout.astro";
import PostCard from "../components/PostCard/PostCard.astro";

const { entries = [] } = Astro.props;
---

<MainLayout title="Blog">
    <h1
        class="font-bold text-4xl md:text-5xl mt-32 mb-4 mx-4 md:mx-10 leading-9 text-center"
    >
        The Blog
    </h1>
    <h2
        class="text-2xl md:text-3xl mx-4 md:mx-10 text-center text-slate-300 mb-14"
    >
        {t("blog.description")}
    </h2>
    {
        entries.map(({ data: { title, preview, pubDate }, slug }) => (
            <PostCard
                pubDate={pubDate}
                title={title}
                slug={slug}
                preview={preview}
            />
        ))
    }
</MainLayout>
